<!-- views/register.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
<form action="/register" method="post" class="form-container">
    <h1 margin-bottom ="10px">Sign Up</h1>

    <label for="username">Email:</label>
    <input type="email" id="username" name="username" required>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required pattern=".{6,}" title="Minimum 6 characters">

    <label for="confirmPassword">Confirm Password:</label>
    <input type="password" id="confirmPassword" name="confirmPassword" required pattern=".{6,}" title="Minimum 6 characters">

    <button type="submit" class="add-game-button">Register</button>
    <a href="/login" class="add-game-button">Login</a>
</form>
</body>
</html>
